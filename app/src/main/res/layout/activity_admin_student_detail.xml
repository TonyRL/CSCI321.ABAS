<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/adminStudentDetails"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="au.edu.uow.fyp01.abas.module.helper.AdminStudentDetailActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="275dp"
      android:layout_weight="0">

      <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
          android:id="@+id/textView12"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="First Name:"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
          android:id="@+id/textView11"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Last Name:"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:id="@+id/textView13"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Class Number:"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:id="@+id/textView14"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Student ID:"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Beacon ID:"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="vertical"></LinearLayout>

        <EditText
          android:id="@+id/adminStudentDetailFirstName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:orientation="vertical"></LinearLayout>

        <EditText
          android:id="@+id/adminStudentDetailLastName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:orientation="vertical"></LinearLayout>

        <EditText
          android:id="@+id/adminStudentDetailClassNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"
          android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:orientation="vertical"></LinearLayout>

        <EditText
          android:id="@+id/adminStudentDetailID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:orientation="vertical"></LinearLayout>

        <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <EditText
            android:id="@+id/adminStudentDetailsBeaconID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>
          <ImageButton
            android:id="@+id/adminStudentDetailsSearchBeaconBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_search"
            />
        </RelativeLayout>

      </LinearLayout>
    </LinearLayout>

    <Button
      android:id="@+id/adminStudentDetailsSubjectsBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Manage Student's Subjects"/>

    <Button
      android:id="@+id/adminChangeStudentClassBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Change student's class"/>

  </LinearLayout>
</FrameLayout>
