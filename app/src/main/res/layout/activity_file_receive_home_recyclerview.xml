<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_text_background"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/activity_file_receive_home_user_recyclerview_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="File"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/activity_file_receive_home_user_recyclerview_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/White"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/activity_file_receive_home_user_recyclerview_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/White"
                android:textSize="15sp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>