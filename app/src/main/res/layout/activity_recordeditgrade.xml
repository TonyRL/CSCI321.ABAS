<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="au.edu.uow.fyp01.abas.Activity.RecordEditGradeActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/PurplishBlue"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textView5"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/PurplishBlue"
        android:text="Edit/View Grade"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/White"
        android:textSize="18sp"/>

      <Button
        android:id="@+id/recordEditGradeSaveBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@drawable/ic_edit_black_24dp"
        android:backgroundTint="@color/White"/>

      <Button
        android:id="@+id/recordEditGradeDeleteBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@drawable/ic_delete_24dp"
        android:backgroundTint="@color/White"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
          android:id="@+id/textView12"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Grade"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
          android:id="@+id/textView11"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Date"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:id="@+id/textView13"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="Record ID"
          android:textAlignment="textEnd"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="vertical"></LinearLayout>

        <EditText
          android:id="@+id/recordGradeEditView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="textPersonName"
          android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:id="@+id/recordDateTextView"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
          android:id="@+id/recordIDTextView"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
