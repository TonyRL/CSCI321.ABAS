<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/frameLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/PurplishBlue"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView5"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/PurplishBlue"
            android:text="Add New User"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/White"
            android:textSize="18sp"/>

        </LinearLayout>

        <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Add new user"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="327dp"
          android:orientation="horizontal">

          <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical"></LinearLayout>

            <TextView
              android:id="@+id/textView12"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="Full Name:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:orientation="vertical">

            </LinearLayout>

            <TextView
              android:id="@+id/textView13"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="Teacher ID:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:orientation="vertical">

            </LinearLayout>

            <TextView
              android:id="@+id/textView14"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="Title:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical"></LinearLayout>

            <TextView
              android:id="@+id/textView21"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="User Type:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical"></LinearLayout>

            <TextView
              android:id="@+id/textView23"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="Password:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:orientation="vertical">

            </LinearLayout>

            <TextView
              android:id="@+id/textView24"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:text="Confirm Password:"
              android:textAlignment="textEnd"
              android:textAppearance="@style/TextAppearance.AppCompat"/>

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical"></LinearLayout>

            <EditText
              android:id="@+id/adminAddUserFullName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textPersonName"
              android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="10dp"
              android:orientation="vertical"></LinearLayout>

            <EditText
              android:id="@+id/adminAddUserTeacherID"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textPersonName"
              android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="11dp"
              android:orientation="vertical">

            </LinearLayout>

            <Spinner
              android:id="@+id/adminAddUserTitleSpinner"
              android:layout_width="match_parent"
              android:layout_height="25dp"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical"></LinearLayout>

            <Spinner
              android:id="@+id/adminAddUserTypeSpinner"
              android:layout_width="match_parent"
              android:layout_height="25dp"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="vertical">

            </LinearLayout>

            <EditText
              android:id="@+id/adminAddUserPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textPassword"
              android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="10dp"
              android:orientation="vertical"></LinearLayout>

            <EditText
              android:id="@+id/adminAddUserConfirmPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textPassword"
              android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

          </LinearLayout>
        </LinearLayout>

        <Button
          android:id="@+id/adminAddUserBtn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Add New User"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        </LinearLayout>

      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</FrameLayout>