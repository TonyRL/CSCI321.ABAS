<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.uow.fyp01.abas.Activity.DUMMYSEARCHBEACON">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ReallyDarkBlue"
            android:text="Search Beacons"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="364dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/fakeBeacon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beacon1" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/searchBeaconProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
