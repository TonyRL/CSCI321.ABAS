<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="au.edu.uow.fyp01.abas.Activity.RecordAddNewGradeActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/PurplishBlue"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textView5"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/PurplishBlue"
        android:text="Add New Grade"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/White"
        android:textSize="18sp"/>

      <Button
        android:id="@+id/recordAddGradeBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@drawable/ic_check"
        android:backgroundTint="@color/White"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Grade Name: "
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Grade: "
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Date: "
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Type: "
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"></LinearLayout>

        <EditText
            android:id="@+id/recordNewNameEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="vertical"></LinearLayout>

        <EditText
            android:id="@+id/recordNewGradeEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
          android:id="@+id/recordNewDateTextView"
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:text="   Tap to set date"
          android:textAppearance="@style/TextAppearance.AppCompat"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="25dp"
          android:orientation="vertical"></LinearLayout>

        <Spinner
            android:id="@+id/recordNewTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
