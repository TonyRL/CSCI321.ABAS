<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="10dp"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/classListTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/greenhead"
      android:text="Classes"
      android:textAlignment="center"
      android:textSize="20dp"
      android:layout_marginBottom="10dp"/>


    <Button
      android:id="@+id/button1"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="1A"
      android:textAlignment="center"
      android:background="@drawable/greenhead"
      android:textSize="20dp"
      android:layout_marginBottom="10dp"/>
    <Button
      android:id="@+id/button2"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="1B"
      android:textAlignment="center"
      android:background="@drawable/greenhead"
      android:textSize="20dp"
      android:layout_marginBottom="10dp"/>
    <Button
      android:id="@+id/button2a"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="2A"
      android:textAlignment="center"
      android:background="@drawable/yellowheader"
      android:textSize="20dp"
      android:layout_marginBottom="10dp"/>
    <Button
      android:id="@+id/button2b"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:text="2B"
      android:textAlignment="center"
      android:background="@drawable/yellowheader"
      android:textSize="20dp"
      android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/classListRecyclerView"
      android:layout_width="match_parent"
      android:paddingTop="5dp"
      android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
      android:id="@+id/classListProgressBar"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="match_parent"
      android:layout_height="20dp"
      android:scrollbarStyle="insideInset"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"/>

  </LinearLayout>

</LinearLayout>